@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Typo="Typo.h6" Class="ml-3">Financial Risk Insights</MudText>
        <MudSpacer />
        <MudIconButton Icon="Icons.Material.Filled.Settings" Color="Color.Inherit" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/risk-dashboard" Icon="Icons.Material.Filled.Dashboard">Risk Dashboard</MudNavLink>
            <MudNavLink Href="/efficient-frontier" Icon="Icons.Material.Filled.TrendingUp">Efficient Frontier</MudNavLink>
            <MudNavLink Href="/portfolio-builder" Icon="Icons.Material.Filled.Build">Portfolio Builder</MudNavLink>
            <MudNavLink Href="/var-calculator" Icon="Icons.Material.Filled.Calculate">VaR Calculator</MudNavLink>
            <MudNavLink Href="/portfolio-optimization" Icon="Icons.Material.Filled.Optimize">Portfolio Optimization</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}